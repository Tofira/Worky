<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"


    >

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_entrance"
        android:id="@+id/iv_entrance_icon"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_entrance_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_entrance_icon"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_entrance_icon"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-light"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_exit"
        android:id="@+id/iv_exit_icon"
        android:layout_below="@+id/iv_entrance_icon"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/tv_exit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_exit_icon"
        android:layout_toRightOf="@+id/iv_exit_icon"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-light"
        />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-light"
        />

    <ImageView
        android:id="@+id/iv_duration"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_toLeftOf="@+id/tv_duration"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_duration"
        />

</RelativeLayout>